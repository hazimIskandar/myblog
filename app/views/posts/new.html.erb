<div class="container">
	<div class="row">
	<h1>Fill your post here</h1>
		<div class="col-md-4">
			<%= form_for (@post) do |f|%>
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>

				<%=f.label :content %>
				<%=f.text_area :content, size: "60x12", class: 'form-control'%>

				<%= f.submit "Submit Post", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>